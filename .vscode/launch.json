{
    "version": "0.2.0",
    "configurations": [
        // Pythonファイルに対してF5で実行掛けた時のデフォルト設定
        {
            "name": "Python: Current File",
            "type": "python",
            "windows": {
                "env": {
                    "PYTHONPATH": ".\\src\\lambda_functions;.\\src\\layer\\python",
                }
            },
            "linux": {
                "env": {
                    "PYTHONPATH": "./src/lambda_functions:./src/layer/python",
                }
            },
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}